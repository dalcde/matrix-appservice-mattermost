{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "allowJs": false,
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "incremental": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "sourceMap": true,
    "useUnknownInCatchVariables": false
  },
  "include": ["src/**/*"]
}
